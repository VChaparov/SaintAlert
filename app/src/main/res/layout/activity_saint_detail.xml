<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaintDetailActivity"
    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/SaintNameTxt"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="Saint"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SaintDateTxt"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SaintNameTxt" />

    <TextView
        android:id="@+id/SaintDescriptionTxt"
        android:layout_width="338dp"
        android:layout_height="258dp"
        android:layout_marginTop="110dp"
        android:text="Description"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/SaintNameTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="@+id/SaintNameTxt"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Error"
        android:layout_width="331dp"
        android:layout_height="97dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintStart_toStartOf="@+id/SaintNameTxt"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>